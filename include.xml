<?xml version="1.0" encoding="UTF-8"?>
<ERDiagram>
    <Entity name="Пользователь">
        <Attribute name="ID" type="int" primaryKey="true"/>
        <Attribute name="Имя" type="varchar(50)"/>
        <Attribute name="Email" type="varchar(100)"/>
        <Attribute name="Пароль" type="varchar(100)"/>
    </Entity>

    <Entity name="Документ">
        <Attribute name="ID" type="int" primaryKey="true"/>
        <Attribute name="Название" type="varchar(100)"/>
        <Attribute name="Описание" type="text"/>
        <Attribute name="ДатаСоздания" type="datetime"/>
        <Attribute name="ПользовательID" type="int" foreignKey="true"/>
    </Entity>

    <Entity name="Шаблон">
        <Attribute name="ID" type="int" primaryKey="true"/>
        <Attribute name="Название" type="varchar(100)"/>
        <Attribute name="Описание" type="text"/>
        <Attribute name="ДатаСоздания" type="datetime"/>
        <Attribute name="ПользовательID" type="int" foreignKey="true"/>
    </Entity>

    <Relationship name="Создает">
        <EntityRef entity="Пользователь"/>
        <EntityRef entity="Документ"/>
    </Relationship>

    <Relationship name="Использует">
        <EntityRef entity="Пользователь"/>
        <EntityRef entity="Шаблон"/>
    </Relationship>

    <Relationship name="Редактирует">
        <EntityRef entity="Пользователь"/>
        <EntityRef entity="Документ"/>
    </Relationship>

    <Relationship name="РедактируетШаблон">
        <EntityRef entity="Пользователь"/>
        <EntityRef entity="Шаблон"/>
    </Relationship>
</ERDiagram>
